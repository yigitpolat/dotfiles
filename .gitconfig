[user]
	name = Yigit Polat
	email = yigitpolatt@gmail.com

[alias]

[color]
	ui = auto
  
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
  
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
  
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = code --wait
	quotepath = false
	excludesfile = ~/.gitignore

[github]
	user = yigitpolat
  
[url "git@github.com:"]
	insteadOf = https://github.com/

[init]
	defaultBranch = main
